<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.collections.FXCollections?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.cell.PropertyValueFactory?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane xmlns:fx="http://javafx.com/fxml/1" fx:controller="application.ReportByTypeController">
    <children>
        <ComboBox fx:id="transactionTypeDropdown" layoutX="20.0" layoutY="20.0" prefWidth="200.0" />
        <Button fx:id="filterButton" layoutX="240.0" layoutY="20.0" text="Filter" />
        <TableView fx:id="transactionTable" layoutX="20.0" layoutY="70.0" prefWidth="560.0" prefHeight="400.0">
            <columns>
                <TableColumn fx:id="accountColumn" text="Account" prefWidth="100.0" />
                <TableColumn fx:id="transactionDateColumn" text="Transaction Date" prefWidth="150.0" />
                <TableColumn fx:id="transactionDescriptionColumn" text="Description" prefWidth="200.0" />
                <TableColumn fx:id="paymentAmountColumn" text="Payment" prefWidth="100.0" />
                <TableColumn fx:id="depositAmountColumn" text="Deposit" prefWidth="100.0" />
            </columns>
        </TableView>
        <Button fx:id="backButton" onAction="#goBack" layoutX="20.0" layoutY="490.0" text="Back" />


    </children>
</AnchorPane>
