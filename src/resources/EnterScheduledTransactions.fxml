<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns:fx="http://javafx.com/fxml" fx:controller="application.EnterScheduledTransactionsController">
    <children>
        <VBox alignment="TOP_CENTER" spacing="10.0" layoutX="20.0" layoutY="20.0" prefWidth="400.0">
            <!-- Schedule Name Field -->
            <HBox spacing="10">
                <Label text="Schedule's Name:" />
                <TextField fx:id="scheduleNameField" promptText="e.g., Rent" />
            </HBox>

            <!-- Account Dropdown -->
            <HBox spacing="10">
                <Label text="Account:" />
                <ComboBox fx:id="accountDropdown" promptText="Select Account" />
            </HBox>

            <!-- Transaction Type Dropdown -->
            <HBox spacing="10">
                <Label text="Transaction Type:" />
                <ComboBox fx:id="transactionTypeDropdown" promptText="Select Transaction Type" />
            </HBox>

            <!-- Frequency Dropdown -->
            <HBox spacing="10">
                <Label text="Frequency:" />
                <ComboBox fx:id="frequencyDropdown" promptText="Select Frequency" />
            </HBox>

            <!-- Due Date Field -->
            <HBox spacing="10">
                <Label text="Due Date:" />
                <TextField fx:id="dueDateField" promptText="e.g., 15" />
            </HBox>

            <!-- Payment Amount Field -->
            <HBox spacing="10">
                <Label text="Payment Amount:" />
                <TextField fx:id="paymentAmountField" promptText="e.g., 100.00" />
            </HBox>

            <!-- Save Button -->
            <Button fx:id="saveButton" text="Save" onAction="#saveScheduledTransaction" />
        </VBox>
    </children>
</AnchorPane>
