<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane prefHeight="1000.0" prefWidth="1175.0" style="-fx-background-color: #acc497;" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="application.EditScheduledTransactionController">
    <children>
        <!-- Form Container -->
        <VBox alignment="CENTER" layoutX="200.0" prefHeight="600.0" prefWidth="800.0" spacing="20" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="201.0" AnchorPane.rightAnchor="201.0" AnchorPane.topAnchor="100.0">
            <padding>
                <Insets bottom="20" left="20" right="20" top="20" />
            </padding>

            <!-- Title -->
            <Label style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: black;" text="Edit Scheduled Transaction" />

            <!-- Schedule Name Field -->
            <HBox alignment="CENTER" spacing="10.0">
                <Label style="-fx-font-size: 14px; -fx-text-fill: black;" text="Schedule Name:" />
                <TextField fx:id="scheduleNameField" prefWidth="300.0" promptText="Enter schedule name" />
            </HBox>

            <!-- Account Dropdown -->
            <HBox alignment="CENTER" spacing="10.0">
                <Label style="-fx-font-size: 14px; -fx-text-fill: black;" text="Account:" />
                <ComboBox fx:id="accountDropdown" prefWidth="300.0" />
            </HBox>

            <!-- Transaction Type Dropdown -->
            <HBox alignment="CENTER" prefHeight="25.0" prefWidth="594.0" spacing="10.0">
                <Label style="-fx-font-size: 14px; -fx-text-fill: black;" text="Transaction Type:" />
                <ComboBox fx:id="transactionTypeDropdown" prefWidth="300.0" />
            </HBox>

            <!-- Frequency Dropdown -->
            <HBox alignment="CENTER" spacing="10.0">
                <Label style="-fx-font-size: 14px; -fx-text-fill: black;" text="Frequency:" />
                <ComboBox fx:id="frequencyDropdown" prefWidth="300.0" />
            </HBox>

            <!-- Due Date Field -->
            <HBox alignment="CENTER" spacing="10.0">
                <Label style="-fx-font-size: 14px; -fx-text-fill: black;" text="Due Date:" />
                <TextField fx:id="dueDateField" prefWidth="300.0" promptText="Enter day of the month" />
            </HBox>

            <!-- Payment Amount Field -->
            <HBox alignment="CENTER" spacing="10.0">
                <Label style="-fx-font-size: 14px; -fx-text-fill: black;" text="Payment Amount:" />
                <TextField fx:id="paymentAmountField" prefWidth="300.0" />
            </HBox>

            <!-- Buttons -->
            <HBox alignment="CENTER" spacing="20.0">
                <Button fx:id="saveButton" prefHeight="30.0" prefWidth="120.0" style="-fx-background-color: #9fa698; -fx-text-fill: white;" text="Save" />
                <Button fx:id="cancelButton" onAction="#cancelEditScheduledTransaction" prefHeight="30.0" prefWidth="120.0" style="-fx-background-color: #9fa698; -fx-text-fill: white;" text="Cancel" />
            </HBox>
        </VBox>
    </children>
</AnchorPane>
